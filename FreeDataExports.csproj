<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.22</Version>
    <Authors>Ryan A. Kueter</Authors>
    <Company>Ryan A. Kueter</Company>
    <Description>A .NET library that allows you to export your data to a spreadsheet, including .xlsx (2019), .ods (1.3), and .csv files.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>Icon.jpg</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/ryankueter/FreeDataExports</RepositoryUrl>
    <PackageReleaseNotes>** Breaking Changes ** FreeDataExports now includes a dependency injection feature. Consequently, a namespace has changed. If you were using the FreeDataExports.Spreadsheets using statement, you can now use the FreeDataExports using statement instead.</PackageReleaseNotes>
    <PackageTags>C#;Spreadsheets</PackageTags>
    <AssemblyVersion>1.0.22.0</AssemblyVersion>
    <FileVersion>1.0.22.0</FileVersion>
    <Copyright>Ryan A. Kueter</Copyright>
    <PackageProjectUrl>https://github.com/ryankueter/FreeDataExports</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>Git</RepositoryType>
    <Product>$(AssemblyName)</Product>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Artwork\Icon.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
